<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/demoFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.tailorfit.android.tailorfitapp.signup.SignUpFragment"
        android:label="SignUpFragment">
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_signUpFragment_to_addCustomerNameFragment"
            app:destination="@id/addCustomerNameFragment"
            app:enterAnim="@anim/slide_in_left" />
        <action
            android:id="@+id/action_signUpFragment_to_demoFragment"
            app:destination="@id/demoFragment"
            app:enterAnim="@anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.tailorfit.android.tailorfitapp.signin.SignInFragment"
        android:label="SignInFragment">
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_signInFragment_to_addCustomerNameFragment"
            app:destination="@id/addCustomerNameFragment" />
        <action
            android:id="@+id/action_signInFragment_to_addGigTitleFragment"
            app:destination="@id/addGigTitleFragment" />
    </fragment>
    <fragment
        android:id="@+id/addCustomerPhoneFragment"
        android:name="com.tailorfit.android.tailorfitapp.customer.AddCustomerPhoneFragment"
        android:label="AddCustomerPhoneFragment">
        <action
            android:id="@+id/action_addCustomerPhoneFragment_to_addCustomerGenderFragment"
            app:destination="@id/addCustomerGenderFragment"
            app:enterAnim="@anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/addCustomerGenderFragment"
        android:name="com.tailorfit.android.tailorfitapp.customer.AddCustomerGenderFragment"
        android:label="AddCustomerGenderFragment" >
        <action
            android:id="@+id/action_addCustomerGenderFragment_to_addGigTitleFragment"
            app:destination="@id/addGigTitleFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/addGigTitleFragment"
        android:name="com.tailorfit.android.tailorfitapp.gig.AddGigTitleFragment"
        android:label="fragment_add_gig_title"
        app:startDestination="@id/action_addGigTitleFragment_to_addGigStyleFragment">
        <action
            android:id="@+id/action_addGigTitleFragment_to_addGigStyleFragment"
            app:destination="@id/addGigStyleFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/addGigStyleFragment"
        android:name="com.tailorfit.android.tailorfitapp.gig.AddGigStyleFragment"
        android:label="fragment_add_gig_style_fragment">
        <action
            android:id="@+id/action_addGigStyleFragment_to_addGigDueDateFragment"
            app:destination="@id/addGigDueDateFragment"
            app:enterAnim="@anim/slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/addGigDueDateFragment"
        android:name="com.tailorfit.android.tailorfitapp.gig.AddGigDueDateFragment"
        android:label="fragment_add_gig_due_date">
        <action
            android:id="@+id/action_addGigDueDateFragment_to_addGigPriceFragment"
            app:destination="@id/addGigPriceFragment"
            app:enterAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/addGigPriceFragment"
        android:name="com.tailorfit.android.tailorfitapp.gig.AddGigPriceFragment"
        android:label="AddGigPriceFragment" >
        <action
            android:id="@+id/action_addGigPriceFragment_to_addGigDetails"
            app:destination="@id/addGigDetails" />
    </fragment>
    <fragment
        android:id="@+id/addCustomerNameFragment"
        android:name="com.tailorfit.android.tailorfitapp.customer.AddCustomerNameFragment"
        android:label="AddCustomerNameFragment" >
        <action
            android:id="@+id/action_addCustomerNameFragment_to_addCustomerPhoneFragment"
            app:destination="@id/addCustomerPhoneFragment"
            app:enterAnim="@anim/fade_in" />
        <action
            android:id="@+id/action_addCustomerNameFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/addGigDetails"
        android:name="com.tailorfit.android.tailorfitapp.gig.AddGigDetailsFragment"
        android:label="fragment_add_gig_details"
        tools:layout="@layout/fragment_add_gig_details" >
        <action
            android:id="@+id/action_addGigDetails_to_femaleMeasurementFragment"
            app:destination="@id/femaleMeasurementFragment" />
        <action
            android:id="@+id/action_addGigDetails_to_maleMeasurementFragment"
            app:destination="@id/maleMeasurementFragment" />
        <action
            android:id="@+id/action_addGigDetails_to_maleMeasurementFragment2"
            app:destination="@id/maleMeasurementFragment" />
    </fragment>
    <fragment
        android:id="@+id/femaleMeasurementFragment"
        android:name="com.tailorfit.android.tailorfitapp.measurement.FemaleMeasurementFragment"
        android:label="fragment_female_measurement"
        tools:layout="@layout/fragment_female_measurement" >
        <action
            android:id="@+id/action_femaleMeasurementFragment_to_dashBoardFragment"
            app:destination="@id/dashBoardFragment" />
        <action
            android:id="@+id/action_femaleMeasurementFragment_to_maleMeasurementFragment"
            app:destination="@id/maleMeasurementFragment" />
    </fragment>
    <fragment
        android:id="@+id/maleMeasurementFragment"
        android:name="com.tailorfit.android.tailorfitapp.measurement.MaleMeasurementFragment"
        android:label="MaleMeasurementFragment" >
        <action
            android:id="@+id/action_maleMeasurementFragment_to_dashBoardFragment"
            app:destination="@id/dashBoardFragment" />
    </fragment>
    <fragment
        android:id="@+id/dashBoardFragment"
        android:name="com.tailorfit.android.tailorfitapp.userdashboard.DashBoardFragment"
        android:label="DashBoardFragment" >
        <action
            android:id="@+id/action_dashBoardFragment_to_completedJobsFragment"
            app:destination="@id/completedJobsFragment" />
        <action
            android:id="@+id/action_dashBoardFragment_to_pendingJobsFragment"
            app:destination="@id/pendingJobsFragment" />
    </fragment>
    <fragment
        android:id="@+id/pendingJobsFragment"
        android:name="com.tailorfit.android.tailorfitapp.pendingjobs.PendingJobsFragment"
        android:label="fragment_pending_jobs"
        tools:layout="@layout/fragment_pending_jobs" >
        <action
            android:id="@+id/action_pendingJobsFragment_to_customerDetailsFragment"
            app:destination="@id/customerDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/completedJobsFragment"
        android:name="com.tailorfit.android.tailorfitapp.completedjobs.CompletedJobsFragment"
        android:label="fragment_completed_jobs"
        tools:layout="@layout/fragment_completed_jobs" >
        <action
            android:id="@+id/action_completedJobsFragment_to_customerDetailsFragment"
            app:destination="@id/customerDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/customerDetailsFragment"
        android:name="com.tailorfit.android.tailorfitapp.customerdetails.CustomerDetailsFragment"
        android:label="fragment_customer_details"
        tools:layout="@layout/fragment_customer_details" >
        <argument
            android:name="customerInfo"
            app:argType="com.tailorfit.android.tailorfitapp.models.response.CustomerInfoResponseModel" />
    </fragment>
    <fragment
        android:id="@+id/demoFragment"
        android:name="com.tailorfit.android.tailorfitapp.intro.DemoFragment"
        android:label="DemoFragment" >
        <action
            android:id="@+id/action_demoFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/fade_in" />
    </fragment>
</navigation>